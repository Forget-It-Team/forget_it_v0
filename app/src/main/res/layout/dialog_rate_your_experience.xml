<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you enjoying our app?\nPlease give us your feedback"
        android:textAlignment="center"
        android:textSize="20sp"
        android:id="@+id/upcoming_dialog_text"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upcoming_dialog_text"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate now"
            android:textColor="@color/white"
            android:backgroundTint="#11aa11"
            android:id="@+id/dialog_rate_it_now"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remind me later"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#ff0000"
            android:id="@+id/dialog_remind_me_later"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>