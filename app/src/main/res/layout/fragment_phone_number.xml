<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PhoneNumberFragment">

        <ImageView
            android:id="@+id/logo1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo1"
            android:text="Forget'it"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="40dp"
            android:id="@+id/logoText1"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/origin1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/enterPhoneNumbertv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your phone number"
            android:fontFamily="@font/montserrat_regular"
            android:layout_above="@id/origin1"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textSize="20dp"
            android:gravity="center_horizontal" />

        <EditText
            android:id="@+id/phoneNumberET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/origin1"
            android:maxLength="10"
            android:inputType="phone"
            android:fontFamily="@font/montserrat_medium"
            android:textAlignment="center"
            android:layout_marginHorizontal="20dp"
            android:layout_margin="20dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/sendOtpBtn"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_below="@id/phoneNumberET"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#072337">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Send OTP"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</layout>